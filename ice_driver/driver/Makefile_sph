ifneq ($(KERNELRELEASE),)

include $(src)/Kbuild

else

KDIR ?= /lib/modules/`uname -r`/build

default:
	$(MAKE) -C $(KDIR) M=$$PWD SPH=y

clean:
	$(MAKE) -C $(KDIR) M=$$PWD SPH=y clean

endif
